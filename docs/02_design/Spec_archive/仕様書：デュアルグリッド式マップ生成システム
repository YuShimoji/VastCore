void GenerateMap() {
    for (int x = 0; x < width - 1; x++) {
        for (int y = 0; y < height - 1; y++) {
            // 4éš…ã®ãƒ‡ãƒ¼ã‚¿ã‚’å–å¾—
            int tl = mapData[x, y + 1] ? 1 : 0;
            int tr = mapData[x + 1, y + 1] ? 1 : 0;
            int br = mapData[x + 1, y] ? 1 : 0;
            int bl = mapData[x, y] ? 1 : 0;

            // ãƒ“ãƒƒãƒˆæ¼”ç®—ã§ã‚¤ãƒ³ãƒ‡ãƒƒã‚¯ã‚¹åŒ–
            int index = (tl << 3) | (tr << 2) | (br << 1) | bl;

            // é…åˆ—ã‹ã‚‰ãƒ—ãƒ¬ãƒãƒ–ã‚’å–å¾—ã—ã¦ç”Ÿæˆ
            if (prefabs[index] != null) {
                Instantiate(prefabs[index], 
                            new Vector3(x * cellSize, 0, y * cellSize), 
                            Quaternion.identity);
            }
        }
    }
}

